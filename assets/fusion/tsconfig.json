{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
}
