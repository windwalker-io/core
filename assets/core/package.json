{
  "name": "@windwalker-io/core",
  "version": "4.2.4",
  "type": "module",
  "description": "Windwalker Core JS package",
  "scripts": {
    "build": "yarn build:next && yarn build:debugger",
    "dev": "yarn dev:debugger",
    "build:next": "vite build --config vite.next.config.ts",
    "dev:next": "yarn build:next --watch",
    "build:debugger": "vite build --config vite.debugger.config.ts",
    "dev:debugger": "vite --config vite.debugger.config.ts"
  },
  "exports": {
    ".": "./src/index.mjs",
    "./next": {
      "types": "./dist/next.d.ts",
      "require": "./dist/next.js",
      "import": "./dist/next.js"
    },
    "./app": {
      "require": "./src/app/index.ts",
      "import": "./src/app/index.ts"
    }
  },
  "files": [
    "dist",
    "images",
    "scss",
    "src",
    "package.json"
  ],
  "repository": "https://github.com/ventoviro/windwalker-core",
  "author": "Simon Asika",
  "license": "MIT",
  "dependencies": {
    "@windwalker-io/fusion-next": "*",
    "fast-glob": "^3.3.3",
    "is-glob": "^4.0.3",
    "micromatch": "^4.0.8",
    "node-html-parser": "^7.0.1"
  },
  "devDependencies": {
    "@asika32764/vue-animate": "^3.0.2",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/vue-fontawesome": "^3.0.1",
    "@types/gulp-rename": "^2",
    "@types/is-glob": "^4",
    "@types/micromatch": "^4.0.9",
    "@types/systemjs": "^6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/reactivity": "^3.3.7",
    "@vue/tsconfig": "^0.4.0",
    "axios": "^1.0",
    "bootstrap": "^5.0",
    "dayjs": "^1.11.5",
    "file-loader": "^6.2.0",
    "gulp-rename": "^2.0.0",
    "rimraf": "^6.0.1",
    "sql-formatter": "^10.6.0",
    "systemjs": "^6.15.1",
    "tailwindcss": "^3.0",
    "typescript": "^5.1.6",
    "unplugin-dts": "^1.0.0-beta.6",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-public-path": "^1.1.0",
    "vue": "^3.0.11",
    "vue-router": "^4.2.4",
    "vuedraggable": "^3.0||^4.0.3"
  },
  "windwalker": {
    "vendors": [
      "@windwalker-io/core"
    ]
  }
}
